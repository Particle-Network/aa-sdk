{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES2021", "dom"],
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types"],
        "outDir": "lib",
        "declarationDir": "dist/types",
        "noEmit": false
    }
}
